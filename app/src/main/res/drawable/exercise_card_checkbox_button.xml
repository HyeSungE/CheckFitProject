<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape= "rectangle">
                    <size android:width="40dp" android:height="20dp">
                    </size>
                    <padding android:top="1dp" android:bottom="1dp"
                        android:left="5dp" android:right="5dp"/>
                </shape>
            </item>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape= "rectangle">

                    <solid android:color="#C5C3C3"/>

                    <corners android:radius="20dp"></corners>

                </shape>

            </item>

        </layer-list>

    </item>


    <!-- Checked -->
    <item android:state_checked="true">

        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape= "rectangle">
                    <size android:width="40dp" android:height="20dp">
                    </size>
                    <padding android:top="1dp" android:bottom="1dp"
                        android:left="5dp" android:right="5dp"/>
                </shape>
            </item>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape= "rectangle">

                    <solid android:color="#00C853"/>

                    <corners android:radius="20dp"></corners>

                </shape>

            </item>
            <item android:drawable="@drawable/ic_baseline_check_24"
                android:top="4dp" android:right="4dp"
                android:bottom="4dp" android:left="4dp" />
        </layer-list>

    </item>
</selector>